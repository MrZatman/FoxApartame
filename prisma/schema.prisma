// prisma/schema.prisma

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// ENUMS
// ============================================

enum UserRole {
  SUPER_ADMIN
  TENANT_OWNER
  TENANT_ADMIN
  TENANT_STAFF
  TENANT_ACCOUNTANT
  CUSTOMER
}

enum BookingStatus {
  DRAFT
  HELD
  HOLD_EXPIRED
  PENDING_DEPOSIT
  DEPOSITED
  CONFIRMED
  FULLY_PAID
  IN_PROGRESS
  COMPLETED
  CANCELLED
  REFUNDED
}

enum PaymentStatus {
  PENDING
  PROCESSING
  SUCCEEDED
  FAILED
  REFUNDED
}

enum PaymentType {
  HOLD
  DEPOSIT
  FINAL
  FULL
  REFUND
}

enum PaymentMethod {
  CARD
  OXXO
  SPEI
  TRANSFER
  CASH
}

enum SubscriptionPlan {
  FREE
  STARTER
  PROFESSIONAL
  ENTERPRISE
}

// ============================================
// CORE MODELS
// ============================================

model Tenant {
  id                 String           @id @default(cuid())
  name               String
  slug               String           @unique
  email              String
  phone              String?
  logo               String?
  plan               SubscriptionPlan @default(FREE)
  stripeAccountId    String?
  stripeCustomerId   String?
  primaryColor       String?          @default("#000000")
  isActive           Boolean          @default(true)
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt

  users              User[]
  venues             Venue[]
  customers          Customer[]
}

model User {
  id                 String    @id @default(cuid())
  email              String    @unique
  emailVerified      DateTime?
  name               String?
  phone              String?
  avatar             String?
  hashedPassword     String?
  role               UserRole  @default(CUSTOMER)
  tenantId           String?
  isActive           Boolean   @default(true)
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  tenant             Tenant?   @relation(fields: [tenantId], references: [id])
  accounts           Account[]
  sessions           Session[]

  @@index([tenantId])
  @@index([email])
}

model Venue {
  id               String   @id @default(cuid())
  tenantId         String
  name             String
  slug             String
  description      String?
  address          String
  city             String
  state            String
  country          String   @default("MX")
  capacity         Int
  amenities        String[]
  isActive         Boolean  @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  tenant           Tenant    @relation(fields: [tenantId], references: [id])
  bookings         Booking[]
  images           VenueImage[]

  @@unique([tenantId, slug])
  @@index([tenantId])
  @@index([city])
}

model VenueImage {
  id          String   @id @default(cuid())
  venueId     String
  url         String
  caption     String?
  sortOrder   Int      @default(0)
  isFeatured  Boolean  @default(false)
  createdAt   DateTime @default(now())

  venue       Venue    @relation(fields: [venueId], references: [id], onDelete: Cascade)

  @@index([venueId])
}

model Customer {
  id               String   @id @default(cuid())
  tenantId         String
  email            String
  name             String
  phone            String?
  stripeCustomerId String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  tenant           Tenant    @relation(fields: [tenantId], references: [id])
  bookings         Booking[]

  @@unique([tenantId, email])
  @@index([tenantId])
}

model Booking {
  id               String        @id @default(cuid())
  venueId          String
  customerId       String
  
  eventDate        DateTime      @db.Date
  startTime        String
  endTime          String
  eventType        String?
  guestCount       Int
  
  status           BookingStatus @default(DRAFT)
  
  subtotal         Decimal       @db.Decimal(10, 2)
  taxes            Decimal       @default(0) @db.Decimal(10, 2)
  totalAmount      Decimal       @db.Decimal(10, 2)
  
  holdAmount       Decimal?      @db.Decimal(10, 2)
  holdExpiresAt    DateTime?
  
  depositAmount    Decimal       @db.Decimal(10, 2)
  depositPaidAt    DateTime?
  
  amountPaid       Decimal       @default(0) @db.Decimal(10, 2)
  
  notes            String?
  
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  venue            Venue         @relation(fields: [venueId], references: [id])
  customer         Customer      @relation(fields: [customerId], references: [id])
  payments         Payment[]

  @@index([venueId])
  @@index([customerId])
  @@index([eventDate])
  @@index([status])
}

model Payment {
  id                    String        @id @default(cuid())
  bookingId             String
  type                  PaymentType
  amount                Decimal       @db.Decimal(10, 2)
  currency              String        @default("MXN")
  method                PaymentMethod
  status                PaymentStatus @default(PENDING)
  
  stripePaymentIntentId String?
  
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt

  booking               Booking       @relation(fields: [bookingId], references: [id])

  @@index([bookingId])
  @@index([status])
}

// ============================================
// AUTH MODELS (NextAuth.js)
// ============================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}